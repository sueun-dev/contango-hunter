# Copy this file to `.env` and fill in your API credentials / options.
# Example usage (bash):
#   export $(grep -v '^#' .env | xargs)

# Exchange API keys
UPBIT_API_KEY="YOUR_UPBIT_API_KEY"
UPBIT_API_SECRET="YOUR_UPBIT_API_SECRET"

BITHUMB_API_KEY="YOUR_BITHUMB_API_KEY"
BITHUMB_API_SECRET="YOUR_BITHUMB_API_SECRET"

OKX_API_KEY="YOUR_OKX_API_KEY"
OKX_API_SECRET="YOUR_OKX_API_SECRET"
# OKX passphrase, if required
OKX_API_PASSWORD="YOUR_OKX_API_PASSWORD"

GATEIO_API_KEY="YOUR_GATEIO_API_KEY"
GATEIO_API_SECRET="YOUR_GATEIO_API_SECRET"

HYPERLIQUID_API_KEY="YOUR_HYPERLIQUID_API_KEY"
HYPERLIQUID_API_SECRET="YOUR_HYPERLIQUID_API_SECRET"

# Trading parameters for auto-trader
ENTRY_THRESHOLD=1.0      # percent
EXIT_THRESHOLD=0.2       # percent
AUTO_INTERVAL=10         # seconds between re-evaluations
TRANCHE_USD=50.0         # USD per add/remove tranche (must match script)
MAX_PER_LEG_USD=2000.0   # Maximum USD exposure per leg

# Mode flags (set to "true" to enable live trading)
LIVE_TRADING=false
